[Unit]
Description=aibc demo Application Service
After=syslog.target network.target
Wants=nodejs.service

[Service]
User=root
Group=root
Type=simple
ExecStart=/bin/sh -c '/usr/local/bin/node /opt2/sees/aibc_demo/nodejs/pipeReader.js & /opt2/sees/aibc_demo/d6t/bin/SensorDataApp & wait &>> /opt2/sees/aibc_demo/logs/service.log'
WorkingDirectory=/opt2/sees/aibc_demo
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
